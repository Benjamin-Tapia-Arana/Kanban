<div class="card">
    <div class="card-body">
        <h1 class="my-4"><%= @status_list.title %></h1>
        <% status_list = @status_list %>
        <div class="d-flex">
            <%= link_to 'Renombrar', edit_status_list_path(@status_list), class: 'btn btn-info mb-4 me-2' %>
            <%= link_to 'Nueva tarea', new_team_card_path(status_list_id: status_list.id) , class: 'btn btn-primary mb-4 me-2' %>
            <%= button_to 'Eliminar', status_list_path(@status_list), method: :delete, data: { turbo_confirm: '¿Estás segura/o de eliminar esta tabla?' }, class: 'btn btn-danger mb-4' %>
        </div>
        <br>
        <% if @status_list.cards.any? %>
            <ul class="list-group">
                <% @status_list.cards.each do |card| %>
                    <li class="list-group-item">
                        <div>
                            <h4><strong><%= link_to card.title, card_path(card), class: 'text-decoration-none' %></strong></h4>
                        </div>
                        <div>
                            <strong>Description:</strong> <%= card.description %>
                        </div>
                        <div>
                            <strong>Priority:</strong> <%= card.priority %>
                        </div>
                        <div>
                            <strong>Creator:</strong> <%= card.creator.username %>
                        </div>
                        <div>
                            <strong>Assignee:</strong> <%= card.assignee.username if card.assignee %>
                        </div>
                    </li>
                <% end %>
            </ul>
        <% else %>
            <p class="mt-3">No hay tarjetas en esta lista.</p>
        <% end %>
    </div> 
</div>