<div class="container">
  <div class="row justify-content-center">
    <div class="card col-md-8">
      <div class="card-body">
        <h1 class="my-4">Detalles del Usuario</h1>
        <h5 class="card-text"><strong>Nombre de Usuario:</strong> <%= @user.username %></h5>
        <h5 class="card-text"><strong>Correo Electr√≥nico:</strong> <%= @user.email %></h5>
        <h5 class="card-text"><strong>Nombre Completo:</strong> <%= @user.full_name %></h5>
        <h5 class="card-text"><strong>Activo desde:</strong> <%= @user.created_at.strftime('%d/%m/%Y') %></h5>
        <br><br>
        <div class="d-flex">
          <% if current_user.id == @user.id %>
            <%= link_to 'Editar', edit_user_path(@user), class: 'btn btn-warning me-2' %>
          <% end %>
          <%= link_to 'Volver', users_path, class: 'btn btn-secondary' %>
        </div>
      </div>
    </div>
  </div>
</div>
