<div class="container">  
  <div class="card col-md-10">  
    <h1 class="my-4">Tablas</h1>
    <table class="table rounded-table">
      <thead>
        <tr>
          <th>ID</th>
          <th>Equipo</th>
          <th>Nombre</th>
          <th>Creador</th>
          <th>Visualizar</th>
        </tr>
      </thead>
      <tbody>
        <% @boards.each do |board| %>
          <tr>
            <td><%= board.id %></td>
            <td><%= board.team.name %></td>
            <td><%= board.title %></td>
            <td><%= User.find(board.creator_id).username %></td>
            <% if board.team.users.include?(current_user) %>
              <td><%= link_to 'Vista', board_path(board), class: 'btn btn-primary' %></td>
            <% else %>
              <td><p class="light-gray">No posible</p></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
